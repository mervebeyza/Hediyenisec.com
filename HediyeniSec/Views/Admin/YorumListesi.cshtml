@using HediyeniSec.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorumlar</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>KULLANICI ADI</th>
        <th>MAİL ADRESİ</th>
        <th>YORUM</th>
        <th>FİKİR</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>

       <td>@x.ID</td>
       <td>@x.KullaniciAdi</td>
       <td>@x.Mail</td>
       <td>@x.Yorum</td>
       <td>@x.IcimdenGeldi.Baslik</td>
       <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">SİL</a></td>
       <td><a href="/Admin/YorumGetir/@x.ID" class="btn btn-warning">GÜNCELLE</a></td>
    </tr>
    }
</table>
