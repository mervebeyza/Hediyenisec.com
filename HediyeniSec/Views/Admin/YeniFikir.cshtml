@model HediyeniSec.Models.Siniflar.IcimdenGeldi
@{
    ViewBag.Title = "YeniFikir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Fikir Ekleme</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Baslik)
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Image)
    @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">EKLE</button>
</form>

